<div class="container" style="background-color: #999; max-height: 100vh; width: 100%; margin: 0px; padding-block: 20vh;">
  <div style="background: linear-gradient(135deg, #E0F7FA, #B2EBF2, #80DEEA, #4DD0E1); padding: 40px; border-radius: 15px; box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1); position: relative; max-width: 600px; margin-inline: auto;">
    <div style="position: absolute; top: -50px; left: -50px; width: 200px; height: 200px; background: rgba(255, 255, 255, 0.3); border-radius: 50%;"></div>
    <div style="position: absolute; bottom: -50px; right: -50px; width: 200px; height: 200px; background: rgba(255, 255, 255, 0.3); border-radius: 50%;"></div>
    <%= form_with(model: @business, local: true, html: { style: "background-color: #FFFFFF; padding: 30px; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);" }) do |f| %>
      <div class="field" style="margin-bottom: 20px;">
        <%= f.label :name, style: "color: #008080; font-family: 'Arial', sans-serif;" %>
        <%= f.text_field :name, style: "width: 100%; padding: 12px; border: 1px solid #D1D3D4; border-radius: 5px;" %>
      </div>

      <div class="field" style="margin-bottom: 20px;">
        <%= f.label :phone_number, style: "color: #008080; font-family: 'Arial', sans-serif;" %>
        <%= f.text_field :phone_number, style: "width: 100%; padding: 12px; border: 1px solid #D1D3D4; border-radius: 5px;" %>
      </div>

      <div class="field" style="margin-bottom: 20px;">
        <%= f.label :communication_form, style: "color: #008080; font-family: 'Arial', sans-serif;" %>
        <%= f.select :communication_form, Business.communication_forms.keys.map { |t| [t.humanize, t] }, {}, style: "width: 100%; padding: 12px; border: 1px solid #D1D3D4; border-radius: 5px;" %>
      </div>

      <div class="field" style="margin-bottom: 20px;">
        <%= f.label :address, style: "color: #008080; font-family: 'Arial', sans-serif;" %>
        <%= f.text_field :address, style: "width: 100%; padding: 12px; border: 1px solid #D1D3D4; border-radius: 5px;" %>
      </div>
      
      <div class="field" style="margin-bottom: 20px;">
        <%= f.label :business_type, style: "color: #008080; font-family: 'Arial', sans-serif;" %>
        <%= f.select :business_type, Business.business_types.keys.map { |t| [t.humanize, t] }, {}, style: "width: 100%; padding: 12px; border: 1px solid #D1D3D4; border-radius: 5px;" %>
      </div>

      <%= f.submit 'Submit', style: "background-color: #008080; color: #FFFFFF; padding: 12px 25px; border: none; border-radius: 5px; font-family: 'Arial', sans-serif; cursor: pointer;" %>
    <% end %>
  </div>
</div>